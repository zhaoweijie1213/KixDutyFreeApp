@using KixDutyFree.App.Pages.Components
@inherits LayoutComponentBase

<MApp>
    <MAppBar App>
        <MAppBarNavIcon @onclick="() => _drawer = !_drawer"></MAppBarNavIcon>
        <MToolbarTitle>KixDutyFree App</MToolbarTitle>
        <MSpacer></MSpacer>
        <MButton Text Color="primary" Target="_blank" Href="https://www.kixdutyfree.jp/cn">About</MButton>
    </MAppBar>

    <MNavigationDrawer App @bind-Value="_drawer">
        <MList Nav Routable>
            <MListItem Href="/" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-cart-variant</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>商品列表</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MListItem Href="/account" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-account-edit</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>账号列表</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MListItem Href="/orders" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-order-bool-ascending</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>订单列表</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MListItem Href="/logs" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-math-log</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>日志</MListItemTitle>
                </MListItemContent>
            </MListItem>
        </MList>
    </MNavigationDrawer>

    <MMain Class="grey lighten-4">
        <MContainer Fluid>
            <Loading />
            <MErrorHandler>
                @Body
            </MErrorHandler>
        </MContainer>
    </MMain>
</MApp>

@code {
    private bool? _drawer;

    protected override void OnInitialized()
    {
        _drawer = true;
    }
}
